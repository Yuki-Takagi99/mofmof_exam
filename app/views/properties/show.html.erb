<h1>閲覧</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>
<br>
<p>
  <strong>賃料:</strong>
  <%= @property.rental_price %>円
</p>
<br>
<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>
<br>
<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>
<br>
<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>
<br>

<% n = 0 %>
<% @property.nearest_stations.each do |nearest_station| %>
  <h2>
    <strong>最寄り駅<%= n += 1 %></strong>
  </h2>
  <br>
  <p>
    <strong>路線名:</strong>
    <%= nearest_station.line_name %>
  </p>
  <br>
  <p>
    <strong>駅名:</strong>
    <%= nearest_station.station_name %>
  </p>
  <br>
  <p>
    <strong>徒歩分数:</strong>
    <%= nearest_station.distance_on_foot %>分
  </p>
  <br>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
